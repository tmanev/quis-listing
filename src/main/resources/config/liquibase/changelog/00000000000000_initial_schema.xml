<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <changeSet id="00000000000000" author="tmanev" dbms="postgresql,oracle">
        <createSequence sequenceName="hibernate_sequence" startValue="1000" incrementBy="1"/>
    </changeSet>

    <!--
        QUIS Listing service core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    <changeSet id="00000000000001" author="tmanev" >
        <comment>Core tables for the users</comment>
        <createTable tableName="ql_user">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password_hash" type="varchar(60)"/>
            <column name="first_name" type="varchar(50)"/>
            <column name="last_name" type="varchar(50)"/>
            <column name="email" type="varchar(100)">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="image_url" type="varchar(256)"/>
            <column name="activated" type="boolean" valueBoolean="false">
                <constraints nullable="false" />
            </column>
            <column name="lang_key" type="varchar(5)"/>
            <column name="activation_key" type="varchar(20)"/>
            <column name="reset_key" type="varchar(20)"/>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="reset_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        <createIndex indexName="idx_user_login"
                     tableName="ql_user"
                     unique="true">
            <column name="login" type="varchar(50)"/>
        </createIndex>

        <createIndex indexName="idx_user_email"
                     tableName="ql_user"
                     unique="true">
            <column name="email" type="varchar(100)"/>
        </createIndex>
        <createTable tableName="ql_authority">
            <column name="name" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="ql_user_authority">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="authority_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, authority_name" tableName="ql_user_authority"/>

        <addForeignKeyConstraint baseColumnNames="authority_name"
                                 baseTableName="ql_user_authority"
                                 constraintName="fk_authority_name"
                                 referencedColumnNames="name"
                                 referencedTableName="ql_authority"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="ql_user_authority"
                                 constraintName="fk_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ql_user"/>

        <!--<dropDefaultValue tableName="ql_user" columnName="created_date" columnDataType="datetime"/>-->


        <createTable tableName="ql_persistent_audit_event">
            <column name="event_id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="principal" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="event_date" type="timestamp"/>
            <column name="event_type" type="varchar(255)"/>
        </createTable>

        <createTable tableName="ql_persistent_audit_evt_data">
            <column name="event_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)"/>
        </createTable>
        <addPrimaryKey columnNames="event_id, name" tableName="ql_persistent_audit_evt_data"/>

        <createIndex indexName="idx_persistent_audit_event"
                     tableName="ql_persistent_audit_event"
                     unique="false">
            <column name="principal" type="varchar(50)"/>
            <column name="event_date" type="timestamp"/>
        </createIndex>

        <createIndex indexName="idx_persistent_audit_evt_data"
                     tableName="ql_persistent_audit_evt_data"
                     unique="false">
            <column name="event_id" type="bigint"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="ql_persistent_audit_evt_data"
                                 constraintName="fk_evt_pers_audit_evt_data"
                                 referencedColumnNames="event_id"
                                 referencedTableName="ql_persistent_audit_event"/>
    </changeSet>

    <changeSet id="00000000000002" author="tmanev">
        <comment>Tables for keeping posts</comment>
        <createTable tableName="ql_post">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="text">
                <constraints nullable="false" />
            </column>
            <column name="content" type="longtext" />
            <column name="name" type="varchar(200)" defaultValue="">
                <constraints nullable="false" />
            </column>
            <column name="type" type="varchar(20)" defaultValue="post">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(20)" defaultValue="publish">
                <constraints nullable="false" />
            </column>
            <column name="created" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="modified" type="datetime" defaultValueDate="0000-00-00 00:00:00">
                <constraints nullable="false" />
            </column>
            <column name="mime_type" type="varchar(100)" defaultValue="">
                <constraints nullable="false" />
            </column>
            <column name="comment_count" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="translation_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_post_name"
                     tableName="ql_post"
                     unique="true">
            <column name="name" type="varchar(200)"/>
        </createIndex>
        <createIndex indexName="idx_user_id"
                     tableName="ql_post"
                     unique="false">
            <column name="user_id" type="bigint"/>
        </createIndex>

        <createTable tableName="ql_postmeta">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="post_id" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="value" type="longtext">
                <constraints nullable="true" />
            </column>
        </createTable>

    </changeSet>
    <changeSet id="00000000000003" author="tmanev">
        <comment>Tables for keeping taxonomies</comment>
        <createTable tableName="ql_term">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)" defaultValue="">
                <constraints nullable="false" />
            </column>
            <column name="slug" type="varchar(200)" defaultValue="">
                <constraints nullable="false" />
            </column>
            <column name="term_group" type="bigint" defaultValue="0">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="ql_term_meta">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="term_id" type="bigint" defaultValue="0">
                <constraints nullable="false" />
            </column>
            <column name="key" type="bigint" >
                <constraints nullable="true" />
            </column>
            <column name="value" type="longtext">
                <constraints nullable="true" />
            </column>
        </createTable>

        <createTable tableName="ql_term_taxonomy">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="term_id" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="translation_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="taxonomy" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="longtext">
                <constraints nullable="false" />
            </column>
            <column name="parent_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="count" type="bigint(20)" defaultValue="0">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="ql_term_relationship">
            <column name="object_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="term_taxonomy_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="term_order" type="int(11)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00000000000004" author="tmanev">
        <comment>Tables for keeping custom content fields</comment>
        <createTable tableName="ql_dl_content_field">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="string_id" type="bigint" >
                <constraints nullable="true"/>
            </column>
            <column name="core_field" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="order_num" type="tinyint(4)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="icon_image" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="required" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="has_configuration" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="has_search_configuration" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="can_be_ordered" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="hide_name" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="on_excerpt_page" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="on_listing_page" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="on_search_form" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="on_map" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="on_advanced_search_form" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="options" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="search_options" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="group_id" type="bigint" >
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="ql_dl_content_fields_group">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="on_tab" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="hide_anonymous" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00000000000005" author="tmanev">
        <comment>Tables for keeping and managing languages and translations</comment>
        <createTable tableName="ql_language">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
            <column name="english_name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="major" type="tinyint(4)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="tinyint(4)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="default_locale" type="varchar(35)">
                <constraints nullable="true"/>
            </column>
            <column name="tag" type="varchar(35)">
                <constraints nullable="true"/>
            </column>
            <column name="encode_url" type="tinyint(1)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="ql_language_translation">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="language_code" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
            <column name="display_language_code" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="ql_locale_map">
            <column name="code" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
            <column name="locale" type="varchar(35)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="ql_translation">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tr_group_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="language_code" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
            <column name="source_language_code" type="varchar(7)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="ql_translation_group">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="ql_string">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="language_code" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
            <column name="context" type="varchar(160)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(160)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(40)" defaultValue="LINE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="tinyint(4)" >
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="ql_string_translation">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="string_id" type="bigint" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="language_code" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="tinyint(4)" >
                <constraints nullable="false"/>
            </column>
            <column name="value" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="translation_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

